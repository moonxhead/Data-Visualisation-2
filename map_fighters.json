{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 460,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f3f3f3", "stroke": "#cccccc", "strokeWidth": 0.6}
    },
    {
      "data": {
        "values": [
          {"country_group": "Australia", "lon": 133.7751, "lat": -25.2744},
          {"country_group": "USA", "lon": -98.5795, "lat": 39.8283},
          {"country_group": "Brazil", "lon": -51.9253, "lat": -14.2350},
          {"country_group": "Japan", "lon": 138.2529, "lat": 36.2048},
          {"country_group": "Russia", "lon": 105.3188, "lat": 61.5240},
          {"country_group": "Nigeria", "lon": 8.6753, "lat": 9.0820},
          {"country_group": "Mexico", "lon": -102.5528, "lat": 23.6345}
        ]
      },
      "transform": [
        {
          "lookup": "country_group",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "match_exact"
        },
        {
          "calculate": "datum.country_group == 'USA' ? 'United States' : datum.country_group",
          "as": "alias_name"
        },
        {
          "lookup": "alias_name",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "match_alias"
        },
        {
          "calculate": "(isDefined(datum.match_exact) ? datum.match_exact.length : 0) + (isDefined(datum.match_alias) ? datum.match_alias.length : 0)",
          "as": "fighters"
        }
      ],
      "mark": {"type": "circle", "opacity": 0.75, "stroke": "#333"},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "fighters",
          "type": "quantitative",
          "title": "Fighters",
          "scale": {"type": "sqrt", "range": [0, 1800]}
        },
        "color": {
          "field": "country_group",
          "type": "nominal",
          "legend": {"title": "Country"}
        },
        "tooltip": [
          {"field": "country_group", "title": "Country"},
          {"field": "fighters", "title": "Fighters"}
        ]
      }
    }
  ]
}
