{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 460,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f0f0f0", "stroke": "#cccccc"}
    },
    {
      "data": {
        "url": "combined_fighter_dataset.csv"
      },
      "transform": [
        {
          "aggregate": [{"op": "count", "as": "fighters"}],
          "groupby": ["country"]
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {
          "field": "country",
          "type": "nominal",
          "legend": null
        },
        "color": {
          "field": "fighters",
          "type": "quantitative",
          "title": "Fighters",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "fighters", "title": "Fighters"}
        ]
      }
    }
  ]
}
