{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 420,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f3f3f3", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {"url": "combined_fighter_dataset.csv"},
      "transform": [
        {
          "calculate": "datum.country == 'USA' ? 'United States of America' : toLower(datum.country) == 'united states' ? 'United States of America' : toLower(datum.country) == 'united states of america' ? 'United States of America' : datum.country == 'Russian Federation' ? 'Russia' : datum.country",
          "as": "country_norm"
        },
        {
          "aggregate": [{"op": "count", "as": "fighters"}],
          "groupby": ["country_norm"]
        },
        {
          "lookup": "country_norm",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m-country-names.tsv"
            },
            "key": "name",
            "fields": ["id"]
          },
          "as": "geo_id"
        },
        {"filter": "isValid(datum.geo_id)"},
        {
          "lookup": "geo_id",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
              "format": {"type": "topojson", "feature": "countries"}
            },
            "key": "id",
            "fields": ["geometry"]
          },
          "as": "shape"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "shape", "type": "geojson"},
        "color": {
          "field": "fighters",
          "type": "quantitative",
          "title": "Fighters",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "country_norm", "title": "Country"},
          {"field": "fighters", "title": "Fighters"}
        ]
      }
    }
  ]
}
