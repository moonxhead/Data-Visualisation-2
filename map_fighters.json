          "as": "alias_usa"
        },
        {
          "lookup": "alias_usa",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "m2"
        },
        {
          "calculate": "datum.name=='United Kingdom' ? 'England' : null",
          "as": "alias_uk1"
        },
        {
          "lookup": "alias_uk1",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "m3"
        },
        {
          "calculate": "datum.name=='United Kingdom' ? 'Scotland' : null",
          "as": "alias_uk2"
        },
        {
          "lookup": "alias_uk2",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "m4"
        },
        {
          "calculate": "datum.name=='United Kingdom' ? 'Wales' : null",
          "as": "alias_uk3"
        },
        {
          "lookup": "alias_uk3",
          "from": {
            "data": {"url": "combined_fighter_dataset.csv"},
            "key": "country",
            "fields": ["country"]
          },
          "as": "m5"
        },
