{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of UFC Fighters by Country",
  "width": 800,
  "height": 420,
  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#efefef",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
      "data": { "url": "combined_fighter_dataset.csv" },
      "transform": [
        {
          "calculate": "datum.country=='USA' ? 'United States' : datum.country=='UK' ? 'United Kingdom' : datum.country",
          "as": "country_norm"
        },
        {
          "aggregate": [{ "op": "count", "as": "fighters" }],
          "groupby": ["country_norm"]
        },
        {
          "lookup": "country_norm",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m-country-names.tsv"
            },
            "key": "name",
            "fields": ["id"]
          },
          "as": ["geo_id"]
        },
        {
          "lookup": "geo_id",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
              "format": { "type": "topojson", "feature": "countries" }
            },
            "key": "id",
            "fields": ["type", "geomet]()
