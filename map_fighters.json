{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 460,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f0f0f0", "stroke": "#cccccc", "strokeWidth": 0.6}
    },
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m-country-names.tsv"
            },
            "key": "id",
            "fields": ["name"]
          }
        },
        {
          "calculate": "datum.name=='United States of America' ? 'United States' : datum.name=='Russian Federation' ? 'Russia' : datum.name=='Korea, Republic of' ? 'South Korea' : datum.name",
          "as": "name_norm"
        },
        {
          "lookup": "name_norm",
          "from": {
            "data": {
              "url": "combined_fighter_dataset.csv"
            },
            "transform": [
              {
                "calculate": "datum.country=='USA' ? 'United States' : toLower(datum.country)=='united states' ? 'United States' : toLower(datum.country)=='united states of america' ? 'United States' : datum.country",
                "as": "country_norm"
              },
              {
                "aggregate": [{"op": "count", "as": "fighters"}],
                "groupby": ["country_norm"]
              }
            ],
            "key": "country_norm",
            "fields": ["fighters"]
          },
          "as": ["fighters"]
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "fighters",
          "type": "quantitative",
          "title": "Fighters",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "name", "title": "Country"},
          {"field": "fighters", "title": "Fighters"}
        ]
      }
    }
  ]
}
