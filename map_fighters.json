            "key": "id",
            "fields": ["name"]
          }
        },
        {
          "calculate": "datum.name=='United States of America' ? 'United States' : datum.name=='Russian Federation' ? 'Russia' : datum.name=='Korea, Republic of' ? 'South Korea' : datum.name==\"Korea, Democratic People's Republic of\" ? 'North Korea' : datum.name=='United Kingdom' ? 'United Kingdom' : datum.name=='Czech Republic' ? 'Czechia' : datum.name=='Viet Nam' ? 'Vietnam' : datum.name",
          "as": "name_norm"
        },
        {
          "lookup": "name_norm",
