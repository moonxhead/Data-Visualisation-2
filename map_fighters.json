{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of UFC Fighters by Country",
  "width": "container",
  "height": 460,
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "mark": { "type": "geoshape", "fill": "#efefef", "stroke": "#ffffff", "strokeWidth": 0.5 }
    },
    {
      "data": { "url": "combined_fighter_dataset.csv" },
      "transform": [
        {
          "calculate": "toLower(datum.country)=='usa' ? 'United States of America' : toLower(datum.country)=='united states' ? 'United States of America' : toLower(datum.country)=='uk' ? 'United Kingdom' : datum.country=='England' || datum.country=='Scotland' || datum.country=='Wales' || datum.country=='Northern Ireland' ? 'United Kingdom' : datum.country=='Russia' ? 'Russian Federation' : datum.country=='South Korea' ? 'Korea, Republic of' : datum.country",
          "as": "country_norm"
        },
        { "aggregate": [{ "op": "count", "as": "fighters" }], "groupby": ["country_norm"] },
        {
          "lookup": "country_norm",
          "from": {
            "data": { "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m-country-names.tsv" },
            "key": "name",
            "fields": ["id"]
          },
          "as": ["geo_id"]
        },
        { "filter": "isValid(datum.geo_id)" },
        {
          "lookup": "geo_id",
          "from": {
            "data": {
              "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.12.1/data/world-110m.json",
              "format": { "type": "topojson", "feature": "countries" }
            },
            "key": "id",
            "fields": ["geometry"]
          },
          "as": ["geo"]
        }
      ],
      "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.5 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "fighters",
          "type": "quantitative",
          "title": "Fighters",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "country_norm", "title": "Country" },
          { "field": "fighters", "title": "Fighters" }
        ]
      }
    }
  ]
}
