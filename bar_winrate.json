{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 420,
  "data": { "url": "country_winrates.csv" },
  "mark": { "type": "bar", "cornerRadiusEnd": 3 },
  "encoding": {
    "x": {
      "field": "country_group",
      "type": "nominal",
      "title": "",
      "sort": ["Australia","USA","Brazil","Japan","Russia","Nigeria","Mexico","Rest of World"],
      "axis": {
        "labelAngle": 0,
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    },
    "y": {
      "field": "avg_win_rate",
      "type": "quantitative",
      "title": "Average Win Rate",
      "axis": { "format": ".0%", "labelFontSize": 14, "titleFontSize": 16 },
      "scale": { "domain": [0, 1] }
    },
    "color": {
      "field": "country_group",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": ["Australia","USA","Brazil","Japan","Russia","Nigeria","Mexico","Rest of World"],
        "range": ["#ffb200", "#ffd480", "#ffd480", "#ffd480", "#ffd480", "#ffd480", "#ffd480", "#cc8400"]
      }
    },
    "tooltip": [
      { "field": "country_group", "title": "Country" },
      { "field": "avg_win_rate", "title": "Avg Win Rate", "format": ".1%" }
    ]
  }
}


