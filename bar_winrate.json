{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 420,
  "data": {"url": "combined_fighter_dataset.csv"},
  "transform": [
    {
      "calculate": "indexof(['Australia','United States','Brazil','Japan','Russia','Nigeria','Mexico'], datum.country) >= 0 ? (datum.country=='United States' ? 'USA' : datum.country) : 'Rest of World'",
      "as": "country_group"
    },
    {
      "calculate": "(datum.wins + datum.losses + datum.draws) > 0 ? datum.wins / (datum.wins + datum.losses + datum.draws) : null",
      "as": "win_rate"
    },
    {"filter": "datum.win_rate != null"},
    {
      "aggregate": [{"op": "mean", "field": "win_rate", "as": "avg_win_rate"}],
      "groupby": ["country_group"]
    }
  ],
  "mark": {"type": "bar", "cornerRadiusEnd": 3},
  "encoding": {
    "x": {
      "field": "country_group",
      "type": "nominal",
      "title": "Country Group",
      "sort": ["Australia","USA","Brazil","Japan","Russia","Nigeria","Mexico","Rest of World"]
    },
    "y": {
      "field": "avg_win_rate",
      "type": "quantitative",
      "title": "Average Win Rate",
      "axis": {"format": ".0%"},
      "scale": {"domain": [0, 1]}
    },
    "color": {"field": "country_group", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "country_group", "title": "Group"},
      {"field": "avg_win_rate", "title": "Avg Win Rate", "format": ".1%"}
    ]
  }
}
